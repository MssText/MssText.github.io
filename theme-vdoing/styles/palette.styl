@require './code-theme'

//***vdoing主题-变量***//

// 颜色

$bannerTextColor = #fff // 首页banner区(博客标题)文本颜色
//$accentColor = pink
$activeColor = #ff5722
$arrowBgColor = #ccc
//$badgeTipColor = #42b983
$badgeWarningColor = darken(#ffe564, 35%)
$badgeErrorColor = #DA5961

// 布局
$navbarHeight = 3.6rem
$sidebarWidth = 18rem
$contentWidth = 860px
$homePageWidth = 1100px
$rightMenuWidth = 230px // 右侧菜单

// 代码块
$lineNumbersWrapperWidth = 2.5rem

// 绿色模式
.theme-mode-green
  --accentColor: #3eaf7c
  --accent-color-l10: #4abf8a
  --textLightenColor: #3eaf7c

// 黄色模式
.theme-mode-yellow
  --accentColor: #D59C12
  --accent-color-l10: #f4a62a
  --textLightenColor: #D59C12

// 蓝色模式
.theme-mode-blue
  --accentColor: #3498DB
  --accent-color-l10: #48a2df
  --textLightenColor: #3498DB

// 红色模式
.theme-mode-red
  --accentColor: #E74C3C
  --accent-color-l10: #e95e50
  --textLightenColor: #E74C3C

// 紫色模式
.theme-mode-purple
  --accentColor: #8e44ad
  --accent-color-l10: #9c51bb
  --textLightenColor: #8e44ad

// 浅色模式
.theme-mode-light
  --accentColor: #3eaf7c
  --bodyBg: #f4f4f4
  --mainBg: rgba(255,255,255,1)
  --sidebarBg: rgba(255,255,255,.8)
  --blurBg: rgba(255,255,255,.9)
  --customBlockBg: #f1f1f1
  --textColor: #00323c
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #f6f6f6
  --codeColor: #525252
  codeThemeLight()

// 深色模式
.theme-mode-dark
  --bodyBg: rgb(39,39,43)
  --mainBg: rgba(30,30,34,1)
  --sidebarBg: rgba(30,30,34,.8)
  --blurBg: rgba(30,30,34,.8)
  --customBlockBg: rgb(39,39,43)
  --textColor: rgb(155,155,170)
  --borderColor: #2C2C3A
  --codeBg: #252526
  --codeColor: #fff
  codeThemeDark()

// 阅读模式
.theme-mode-read
  --bodyBg: rgb(236,236,204)
  --mainBg: rgba(245,245,213,1)
  --sidebarBg: rgba(245,245,213,.8)
  --blurBg: rgba(245,245,213,.9)
  --customBlockBg: rgb(236,236,204)
  --textColor: #704214
  --textLightenColor: #996633
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #282c34
  --codeColor: #fff
  codeThemeDark()
